<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ParentMap"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:cameraZoom="16"
        map:mapType="normal"
        map:uiCompass="false"
        map:uiRotateGestures="true"
        map:uiScrollGestures="true"
        map:uiTiltGestures="true"
        map:uiZoomControls="false"
        map:uiZoomGestures="true"
        tools:context=".OutdoorMaps.View.MapsActivity" />

    <Button
        android:id="@+id/SGW"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/conu_gradient"
        android:text="SGW"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/LOY"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="219dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:background="#FFFFFF"
        android:onClick="sendMessage"
        android:text="LOY"
        android:textColor="#000000" />

    <Button
        android:id="@+id/locationButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@id/searchBar"
        android:layout_marginLeft="360dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_gps_fixed_black_24dp"
        android:paddingTop="75dp" />

    <RelativeLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="600dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/searchbargradient"
        android:elevation="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/magnify"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_magnify"></ImageView>

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/magnify"
            android:background="@null"
            android:hint="Where to?"
            android:imeOptions="actionSearch"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="65dp"
            android:background="#FFFFFF" />

        <ImageButton
            android:id="@+id/calandar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:src="@drawable/ic_calandar"></ImageButton>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/floorButtonsGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/floorButtonsLOYVL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:visibility="invisible">

            <Button
                android:id="@+id/loy_vl2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="2" />


            <Button
                android:id="@+id/loy_vl1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/buttonPressed"
                android:text="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/floorButtonsMB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:visibility="invisible">


            <Button
                android:id="@+id/MB1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/buttonPressed"
                android:text="1" />

            <Button
                android:id="@+id/MBS2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="S2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/floorButtonsHall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:visibility="invisible">

            <Button
                android:id="@+id/hall9"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="9" />

            <Button
                android:id="@+id/hall8"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="8" />

            <Button
                android:id="@+id/hall2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="2" />

            <Button
                android:id="@+id/hall1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/buttonPressed"
                android:text="1" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

