<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ParentMap"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:cameraZoom="16"
		tools:context=".OutdoorMaps.View.MapsActivity"
 	    map:cameraZoom="16"
        map:mapType="normal"
        map:uiCompass="false"
        map:uiRotateGestures="true"
        map:uiScrollGestures="true"
        map:uiTiltGestures="true"
        map:uiZoomControls="false"
        map:uiZoomGestures="true"
        tools:context=".OutdoorMaps.View.MapsActivity" />

    <Button
        android:id="@+id/SGW"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/conu_gradient"
        android:text="SGW"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/LOY"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="219dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:background="#FFFFFF"
        android:onClick="sendMessage"
        android:text="LOY"
        android:textColor="#000000" />

    <Button
        android:id="@+id/locationButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@id/searchBar"
        android:layout_marginLeft="360dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_gps_fixed_black_24dp"
        android:paddingTop="75dp" />

    <SearchView

        android:id="@+id/searchBar"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="600dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/searchbargradient"
        android:elevation="15dp"
        android:queryHint="Where To?"
        android:transitionName="BeginTransition"
        android:background="@drawable/searchbargradient"
        android:focusedByDefault="true"
        android:clickable="true"
       />




</RelativeLayout>

